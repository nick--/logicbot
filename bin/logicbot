require_relative '../lib/logicbot'

if ARGV.length < 4 then
  STDERR.puts "usage: logicbot USERNAME IDENTITY_TOKEN SERVER_ADDRESS SERVER_PORT"
  exit 1
end

Logicbot::Bot.new(ARGV[0], ARGV[1], ARGV[2], ARGV[3].to_i).run
